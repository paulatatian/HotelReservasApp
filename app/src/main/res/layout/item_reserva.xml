<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textNumeroConfirmacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmación: ABC123"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textHabitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Habitación 101 - Doble"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textFechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="15/12/2024 - 20/12/2024"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textPrecioTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Total: $600"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/purple_200"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Confirmada"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>